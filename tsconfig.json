{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "es2021"],
    "module": "esnext",
    "target": "es2021",
    "moduleResolution": "bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}